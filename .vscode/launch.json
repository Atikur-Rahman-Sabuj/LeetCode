    "version": "0.2.0",
    "configurations": [

        {
            "request": "launch",
            "name": "Debug current file",
            "type": "pwa-node",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Run current file",
            "type": "pwa-node",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        }
    ]
}